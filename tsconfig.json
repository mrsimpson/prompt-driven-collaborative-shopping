{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      ".expo/types/**/*.ts",
      "./node_modules/@types",
      "./src/types",
      "expo-env.d.ts",
      "nativewind-env.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "jest.config.js",
    "src/types/*.d.ts"
  ]
}
