{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/services/*": ["./src/services/*"],
      "@/repositories/*": ["./src/repositories/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/types/*": ["./src/types/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/models": ["./src/types/models.ts"],
      "@/operations": ["./src/types/operations.ts"]
    },
    "types": ["jest", "node"],
    "typeRoots": [
      ".expo/types/**/*.ts",
      "./node_modules/@types",
      "./src/types",
      "expo-env.d.ts",
      "nativewind-env.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "jest.config.js",
    "src/types/*.d.ts"
  ]
}
